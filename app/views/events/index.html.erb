<h1>Welcome, <%=@user.first_name%></h1>
<p><a href="/users/<%=user.id%>/edit">Edit My Profile</a></p>
<p><a href="/logout">Log Out</a></p>
<p>Here are some of the events at your state:</p>
<table>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Host</th>
        <th>Action/Status</th>
    </tr>
    <% @same_state.each do |event| %>
        <tr>
            <td><%= event.name %></td>
            <td><%= event.date %></td>
            <td><%= event.location.city %></td>
            <td><%= event.user.first_name %></td>
            <td><a href="events/show/<%= event['id']%>">Join</a> | <a href="events/<%=event['id']%>/edit">Edit</a> | <a href="events/<%=event['id']%>/destroy" data-method="delete">Delete</a></td>
        </tr>
    <% end %>
</table>
<p>Here are some of the events at other state:</p>
<table>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Host</th>
        <th>Action/Status</th>
    </tr>
    <% @other_state.each do |event| %>
        <tr>
            <td><%= event.name %></td>
            <td><%= event.date %></td>
            <td><%= event.location.city %></td>
            <td><%= event.attendee.first_name %></td>
            <td><a href="events/show/<%= event['id']%>">Join</a> | <a href="events/<%=event['id']%>/edit">Edit</a> | <a href="events/<%=event['id']%>/destroy" data-method="delete">Delete</a></td>
        </tr>
    <% end %>
</table>

<h3>Add Event</h3>

